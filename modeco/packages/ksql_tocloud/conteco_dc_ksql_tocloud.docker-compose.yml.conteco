---
version: '3'
services:

# START SERVICE ksql_server.sasl
  ksql_server:
    image: ${CONTECO_REGISTRY}${CONTECO_REALM_RUNTIME}/conteco.ksql_server.sasl:5.4.0
    environment: ['KSQL_KSQL_SERVICE_ID=${CONTECO_DC_KSQL_TOCLOUD_KSQL_KSQL_SERVICE_ID}','KSQL_COMMIT_INTERVAL_MS=0','KSQL_CACHE_MAX_BYTES_BUFFERING=0','KSQL_KSQL_STREAMS_PRODUCER_RETRIES=2147483647','KSQL_KSQL_STREAMS_PRODUCER_CONFLUENT_BATCH_EXPIRE_MS=9223372036854775807','KSQL_KSQL_STREAMS_PRODUCER_REQUEST_TIMEOUT_MS=300000','KSQL_KSQL_STREAMS_PRODUCER_MAX_BLOCK_MS=9223372036854775807','KSQL_KSQL_STREAMS_REPLICATION_FACTOR=3','KSQL_KSQL_INTERNAL_TOPIC_REPLICAS=3','KSQL_KSQL_SINK_REPLICAS=3','KSQL_BOOTSTRAP_SERVERS=${CONTECO_DC_KSQL_TOCLOUD_ENVIRONMENT_CLOUD_BOOTSTRAP_SERVERS}','KSQL_SECURITY_PROTOCOL=SASL_SSL','KSQL_SASL_JAAS_CONFIG=org.apache.kafka.common.security.plain.PlainLoginModule required username="${CONTECO_DC_KSQL_TOCLOUD_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_KEY}" password="${CONTECO_DC_KSQL_TOCLOUD_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_SECRET}";','KSQL_SASL_MECHANISM=PLAIN','KSQL_SSL_ENDPOINT_IDENTIFICATION_ALGORITHM=HTTPS','KSQL_PRODUCER_INTERCEPTOR_CLASSES=io.confluent.monitoring.clients.interceptor.MonitoringProducerInterceptor','KSQL_CONSUMER_INTERCEPTOR_CLASSES=io.confluent.monitoring.clients.interceptor.MonitoringConsumerInterceptor','KSQL_KSQL_SCHEMA_REGISTRY_URL=${CONTECO_DC_KSQL_TOCLOUD_ENVIRONMENT_SCHEMA_REGISTRY_URL}','KSQL_KSQL_SCHEMA_REGISTRY_BASIC_AUTH_CREDENTIALS_SOURCE=${CONTECO_DC_KSQL_TOCLOUD_ENVIRONMENT_SCHEMA_REGISTRY_API_KEY}','KSQL_KSQL_SCHEMA_REGISTRY_BASIC_AUTH_USER_INFO=${CONTECO_DC_KSQL_TOCLOUD_ENVIRONMENT_SCHEMA_REGISTRY_API_SECRET}'${CONTECO_DC_KSQL_TOCLOUD_MODE}]
    command: []
    volumes: [${CONTECO_STACKPREFIX}_ksql_server_volume:/conteco/pwd]
    ports: [${CONTECO_DC_KSQL_TOCLOUD_PORTS}]
    networks: [${CONTECO_NETWORKLOCAL}_overlay]
    deploy:
      mode: replicated
      replicas: ${CONTECO_DC_KSQL_TOCLOUD_DEPLOY_REPLICAS}
      resources:
        limits:
          cpus: '${CONTECO_DC_KSQL_TOCLOUD_DEPLOY_RESOURCES_LIMITS_CPUS}'
          memory: '${CONTECO_DC_KSQL_TOCLOUD_DEPLOY_RESOURCES_LIMITS_MEMORY}'
        reservations:
          cpus: '${CONTECO_DC_KSQL_TOCLOUD_DEPLOY_RESOURCES_RESERVATIONS_CPUS}'
          memory: '${CONTECO_DC_KSQL_TOCLOUD_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}'
      placement:
        constraints: [${CONTECO_DC_KSQL_TOCLOUD_DEPLOY_PLACEMENT_CONSTRAINTS}]
      labels: [${CONTECO_DC_KSQL_TOCLOUD_DEPLOY_LABELS}]
    labels: [${CONTECO_DC_KSQL_TOCLOUD_LABELS}]
# END SERVICE ksql_server.sasl

volumes: {${CONTECO_STACKPREFIX}_ksql_server_volume: { external: true }}
networks: {${CONTECO_NETWORKLOCAL}_overlay: { external: true }}
